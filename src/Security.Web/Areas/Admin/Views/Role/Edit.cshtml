@using Security.Application.Features.Roles.Commands
@using Security.Application.Features.Roles.Queries
@model UpdateRoleCommand
@{
    ViewData["Title"] = "Edit Role";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var permissionTree = ViewBag.PermissionTree as List<PermissionTreeModuleDto> ?? new List<PermissionTreeModuleDto>();
    var selectedPermissions = (ViewBag.SelectedPermissions as List<int>) ?? new List<int>();
}
<div class="row justify-content-center"><div class="col-md-8">
<h4>Edit Role</h4>
<form asp-action="Edit" method="post">
    <input asp-for="Id" type="hidden" />
    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>
    <div class="mb-3"><label asp-for="Name" class="form-label"></label><input asp-for="Name" class="form-control" /><span asp-validation-for="Name" class="text-danger"></span></div>
    <div class="mb-3"><label asp-for="Code" class="form-label"></label><input asp-for="Code" class="form-control" /><span asp-validation-for="Code" class="text-danger"></span></div>
    <div class="mb-3"><label asp-for="Description" class="form-label"></label><textarea asp-for="Description" class="form-control" rows="2"></textarea></div>
    <div class="mb-3">
        <label asp-for="CompanyId" class="form-label">Company</label>
        <select asp-for="CompanyId" asp-items="@((List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)ViewBag.Companies)" class="form-select">
            <option value="0">-- Select Company --</option>
        </select>
    </div>
    <div class="mb-3 form-check"><input asp-for="IsActive" class="form-check-input" type="checkbox" /><label asp-for="IsActive" class="form-check-label">Active</label></div>

    <div class="mb-3">
        <label class="form-label fw-bold">Permissions</label>
        @foreach (var module in permissionTree)
        {
            <div class="card mb-2">
                <div class="card-header fw-semibold">@module.Name</div>
                <div class="card-body">
                    @foreach (var menu in module.Menus)
                    {
                        <div class="mb-2">
                            <div class="fw-semibold text-muted small">@menu.Name</div>
                            <div class="d-flex flex-wrap gap-3 ps-2">
                                @foreach (var pt in menu.Permissions)
                                {
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="permissionTypeIds" value="@pt.Id" id="pt_@pt.Id"
                                               @(selectedPermissions.Contains(pt.Id) ? "checked" : "") />
                                        <label class="form-check-label" for="pt_@pt.Id">@pt.Name</label>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>
</div></div>
@section Scripts { @await Html.PartialAsync("_ValidationScriptsPartial") }
