@using Security.Application.Common.Models
@using Security.Application.Features.Users.Queries
@model PaginatedList<UserDto>
@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h4>Users</h4>
    <a asp-action="Create" class="btn btn-primary btn-sm">+ Create User</a>
</div>
@if (TempData["Success"] is string msg)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">@msg <button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
}
<form method="get" class="mb-3 d-flex gap-2">
    <input name="search" value="@ViewBag.Search" class="form-control form-control-sm" placeholder="Search..." style="max-width:300px" />
    <button class="btn btn-outline-secondary btn-sm">Search</button>
</form>
<table class="table table-sm table-hover">
    <thead class="table-dark"><tr><th>Email</th><th>First Name</th><th>Last Name</th><th>Role Group</th><th>Active</th><th></th></tr></thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Email</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.RoleGroupName</td>
                <td><span class="badge @(item.IsActive ? "bg-success" : "bg-secondary")">@(item.IsActive ? "Yes" : "No")</span></td>
                <td class="text-end">
                    <a asp-action="AssignRoleGroup" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Assign Role Group</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@await Html.PartialAsync("_Pager", new Security.Web.Models.Admin.PaginationViewModel { PageNumber = Model.PageNumber, TotalPages = Model.TotalPages, HasPreviousPage = Model.HasPreviousPage, HasNextPage = Model.HasNextPage, Search = ViewBag.Search as string })
