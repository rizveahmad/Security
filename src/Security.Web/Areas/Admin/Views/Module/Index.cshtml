@using Security.Application.Common.Models
@using Security.Application.Features.Modules.Queries
@model PaginatedList<ModuleDto>
@{
    ViewData["Title"] = "Modules";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h4>Modules</h4>
    <a asp-action="Create" class="btn btn-primary btn-sm">+ Add Module</a>
</div>
@if (TempData["Success"] is string msg)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">@msg <button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
}
<form method="get" class="mb-3 d-flex gap-2">
    <input name="search" value="@ViewBag.Search" class="form-control form-control-sm" placeholder="Search..." style="max-width:220px" />
    <select name="companyId" class="form-select form-select-sm" style="max-width:200px">
        <option value="">All Companies</option>
        @foreach (var c in (List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)ViewBag.Companies)
        {
            <option value="@c.Value" @(ViewBag.CompanyId?.ToString() == c.Value ? "selected" : "")>@c.Text</option>
        }
    </select>
    <button class="btn btn-outline-secondary btn-sm">Filter</button>
</form>
<table class="table table-sm table-hover">
    <thead class="table-dark"><tr><th>Name</th><th>Code</th><th>Company</th><th>Active</th><th></th></tr></thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Name</td><td>@item.Code</td><td>@item.CompanyName</td>
                <td><span class="badge @(item.IsActive ? "bg-success" : "bg-secondary")">@(item.IsActive ? "Yes" : "No")</span></td>
                <td class="text-end">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('Delete?')">
                        <button class="btn btn-sm btn-outline-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
@await Html.PartialAsync("_Pager", new Security.Web.Models.Admin.PaginationViewModel { PageNumber = Model.PageNumber, TotalPages = Model.TotalPages, HasPreviousPage = Model.HasPreviousPage, HasNextPage = Model.HasNextPage, Search = ViewBag.Search as string })
