@using Security.Application.Features.RoleGroups.Commands
@model UpdateRoleGroupCommand
@{
    ViewData["Title"] = "Edit Role Group";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var roles = (List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)ViewBag.Roles;
    var selectedRoles = (ViewBag.SelectedRoles as List<int>) ?? new List<int>();
}
<div class="row justify-content-center"><div class="col-md-7">
<h4>Edit Role Group</h4>
<form asp-action="Edit" method="post">
    <input asp-for="Id" type="hidden" />
    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>
    <div class="mb-3"><label asp-for="Name" class="form-label"></label><input asp-for="Name" class="form-control" /><span asp-validation-for="Name" class="text-danger"></span></div>
    <div class="mb-3"><label asp-for="Code" class="form-label"></label><input asp-for="Code" class="form-control" /></div>
    <div class="mb-3"><label asp-for="Description" class="form-label"></label><textarea asp-for="Description" class="form-control" rows="2"></textarea></div>
    <div class="mb-3">
        <label asp-for="CompanyId" class="form-label">Company</label>
        <select asp-for="CompanyId" asp-items="@((List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)ViewBag.Companies)" class="form-select">
            <option value="0">-- Select Company --</option>
        </select>
    </div>
    <div class="mb-3 form-check"><input asp-for="IsActive" class="form-check-input" type="checkbox" /><label asp-for="IsActive" class="form-check-label">Active</label></div>
    <div class="mb-3">
        <label class="form-label fw-bold">Roles</label>
        <div class="d-flex flex-wrap gap-3">
            @foreach (var role in roles)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="roleIds" value="@role.Value" id="role_@role.Value"
                           @(selectedRoles.Contains(int.Parse(role.Value)) ? "checked" : "") />
                    <label class="form-check-label" for="role_@role.Value">@role.Text</label>
                </div>
            }
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>
</div></div>
@section Scripts { @await Html.PartialAsync("_ValidationScriptsPartial") }
