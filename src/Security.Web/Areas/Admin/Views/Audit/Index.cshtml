@using Security.Application.Common.Models
@using Security.Application.Features.AuditLogs.Queries
@model PaginatedList<AuditLogDto>
@{
    ViewData["Title"] = "Audit Log";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h4>Audit Log</h4>
</div>
<form method="get" class="mb-3 d-flex gap-2 flex-wrap">
    <input name="search" value="@ViewBag.Search" class="form-control form-control-sm" placeholder="Search user, entity..." style="max-width:260px" />
    <select name="action" class="form-select form-select-sm" style="max-width:160px">
        <option value="">All Actions</option>
        <option value="Create" @(ViewBag.Action == "Create" ? "selected" : "")>Create</option>
        <option value="Update" @(ViewBag.Action == "Update" ? "selected" : "")>Update</option>
        <option value="Delete" @(ViewBag.Action == "Delete" ? "selected" : "")>Delete</option>
        <option value="Import" @(ViewBag.Action == "Import" ? "selected" : "")>Import</option>
    </select>
    <button class="btn btn-outline-secondary btn-sm">Filter</button>
    @if (!string.IsNullOrEmpty(ViewBag.Search as string) || !string.IsNullOrEmpty(ViewBag.Action as string))
    {
        <a asp-action="Index" class="btn btn-outline-danger btn-sm">Clear</a>
    }
</form>
<table class="table table-sm table-hover">
    <thead class="table-dark">
        <tr><th>Timestamp</th><th>User</th><th>Action</th><th>Entity</th><th>Entity ID</th><th>IP Address</th></tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")</td>
                <td>@item.UserName</td>
                <td><span class="badge @(item.Action == "Create" ? "bg-success" : item.Action == "Delete" ? "bg-danger" : item.Action == "Import" ? "bg-warning text-dark" : "bg-primary")">@item.Action</span></td>
                <td>@item.EntityName</td>
                <td>@item.EntityId</td>
                <td>@item.IpAddress</td>
            </tr>
        }
        @if (!Model.Items.Any())
        {
            <tr><td colspan="6" class="text-center text-muted">No audit logs found.</td></tr>
        }
    </tbody>
</table>
@await Html.PartialAsync("_Pager", new Security.Web.Models.Admin.PaginationViewModel { PageNumber = Model.PageNumber, TotalPages = Model.TotalPages, HasPreviousPage = Model.HasPreviousPage, HasNextPage = Model.HasNextPage, Search = ViewBag.Search as string })
