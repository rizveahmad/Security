@model Security.Web.Models.Account.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="login-container">
    <div class="glass-card login-card">
        <div class="login-header">
            <div class="login-logo">üîê</div>
            <h1 class="login-title">Welcome back</h1>
            <p class="login-subtitle">Sign in to manage your security administration workspace.</p>
        </div>

        @if (!string.IsNullOrWhiteSpace(ViewData["ReturnUrl"] as string))
        {
            <div class="alert alert-danger">Please log in to continue.</div>
        }

        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

        <form asp-action="Login" method="post" id="loginForm" novalidate>
            <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

            <div class="form-group">
                <label asp-for="Identifier" class="form-label"></label>
                <input asp-for="Identifier" class="form-control" autocomplete="username" placeholder="username or email" />
                <span asp-validation-for="Identifier" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" autocomplete="current-password" placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label"></label>
            </div>

            <button type="submit" class="glass-btn glass-btn-primary w-100">Sign in</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
