@using Microsoft.AspNetCore.Identity
@using Security.Infrastructure.Identity
@inject SignInManager<ApplicationUser> SignInManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-controller="Account" asp-action="Logout" method="post" class="d-flex align-items-center gap-2">
        <span class="user-name">@(User.Identity?.Name ?? "User")</span>
        <button type="submit" class="glass-btn glass-btn-secondary btn-sm">Logout</button>
    </form>
}
else
{
    <a asp-controller="Account" asp-action="Login" class="glass-btn glass-btn-primary btn-sm">Login</a>
}
