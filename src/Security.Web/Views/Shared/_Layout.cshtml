<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Security</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Security.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="glass-nav">
        <a class="nav-brand text-decoration-none" asp-area="" asp-controller="Home" asp-action="Index">
            <span class="brand-icon">üõ°Ô∏è</span>
            <span class="brand-text">Security</span>
        </a>
        <div class="d-flex align-items-center gap-3">
            @if (User.Identity?.IsAuthenticated == true && (User.IsInRole("SuperAdmin") || User.IsInRole("Admin")))
            {
                <a class="glass-btn glass-btn-secondary btn-sm" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Admin Console</a>
            }
            <partial name="_LoginPartial" />
        </div>
    </header>

    <main class="main-content" style="margin-left:0; margin-top:var(--nav-height);">
        @RenderBody()
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
