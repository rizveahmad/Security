@{
    ViewData["Title"] = "Home";
}

<div class="text-center py-5">
    <h1 class="display-5 fw-bold">Security Platform</h1>
    <p class="lead text-muted mt-3">A production-ready .NET 10 Clean Architecture baseline.</p>
    @if (User.Identity?.IsAuthenticated != true)
    {
        <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg mt-3">Get Started</a>
    }
    else
    {
        <p class="mt-3">Welcome back, <strong>@(User.Identity?.Name ?? "User")</strong>!</p>
        @if (User.IsInRole("SuperAdmin") || User.IsInRole("Admin"))
        {
            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="btn btn-success btn-lg mt-2">Go to Admin</a>
        }
    }
</div>
