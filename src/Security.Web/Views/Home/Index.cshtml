@{
    ViewData["Title"] = "Workspace";
}

<div class="glass-card" style="max-width:780px; margin: 2rem auto;">
    <h1 class="page-title">Security Workspace</h1>
    <p class="card-subtitle mt-3">You are signed in successfully.</p>
    <p class="text-muted">Use the admin console for access control, modules, menus, and audit activities.</p>

    @if (User.IsInRole("SuperAdmin") || User.IsInRole("Admin"))
    {
        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="glass-btn glass-btn-primary mt-3">Open Admin Console</a>
    }
</div>
