@page
@model Security.Web.Pages.Roles.CreateModel
@{
    ViewData["Title"] = "Create Role";
    ViewData["ActivePage"] = "Roles";
}

<div class="glass-card form-card">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <div class="form-group">
            <label asp-for="Input.Name" class="form-label">Role Name *</label>
            <input asp-for="Input.Name" class="form-control" />
            <span asp-validation-for="Input.Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.Description" class="form-label">Description</label>
            <textarea asp-for="Input.Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Input.Description" class="text-danger"></span>
        </div>

        <div class="form-group form-check">
            <input asp-for="Input.IsActive" class="form-check-input" />
            <label asp-for="Input.IsActive" class="form-check-label">Active</label>
        </div>

        <div class="form-actions">
            <button type="submit" class="glass-btn glass-btn-primary">Create Role</button>
            <a href="/Roles/Index" class="glass-btn glass-btn-secondary">Cancel</a>
        </div>
    </form>
</div>
