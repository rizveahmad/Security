@page
@model Security.Web.Pages.Users.IndexModel
@{
    ViewData["Title"] = "Users";
    ViewData["ActivePage"] = "Users";
}

<div class="page-actions">
    <a href="/Users/Create" class="glass-btn glass-btn-primary">+ New User</a>
    <a href="/Users/Import" class="glass-btn glass-btn-secondary">ðŸ“¥ Import</a>
    <a href="/Users/Export?search=@Model.Search&isActive=@Model.IsActiveFilter" class="glass-btn glass-btn-secondary">ðŸ“¤ Export</a>
</div>

<div class="glass-card mt-3">
    <form method="get" class="filter-form">
        <div class="filter-row">
            <input type="text" name="search" value="@Model.Search" class="form-control" placeholder="Search by name or email..." />
            <select name="isActive" class="form-control">
                <option value="">All Status</option>
                <option value="true" selected="@(Model.IsActiveFilter == "true")">Active</option>
                <option value="false" selected="@(Model.IsActiveFilter == "false")">Inactive</option>
            </select>
            <button type="submit" class="glass-btn glass-btn-primary">Search</button>
            <a href="/Users/Index" class="glass-btn glass-btn-secondary">Clear</a>
        </div>
    </form>
</div>

<div class="glass-card mt-3">
    <table class="glass-table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Status</th>
                <th>Created</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.FullName</td>
                    <td>@user.Email</td>
                    <td>
                        @if (user.IsActive)
                        {
                            <span class="badge badge-success">Active</span>
                        }
                        else
                        {
                            <span class="badge badge-danger">Inactive</span>
                        }
                    </td>
                    <td>@user.CreatedAt.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a href="/Users/Edit?id=@user.Id" class="glass-btn glass-btn-secondary btn-sm">Edit</a>
                    </td>
                </tr>
            }
            @if (!Model.Users.Any())
            {
                <tr><td colspan="5" class="text-center">No users found.</td></tr>
            }
        </tbody>
    </table>
</div>
