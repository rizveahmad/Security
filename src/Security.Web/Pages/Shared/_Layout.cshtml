<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Security Admin</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <nav class="glass-nav">
        <div class="nav-brand">
            <span class="brand-icon">ğŸ”</span>
            <span class="brand-text">Security Admin</span>
        </div>
        <div class="nav-user">
            <span class="user-name">@User.Identity?.Name</span>
            <a href="/Account/Logout" class="glass-btn glass-btn-secondary btn-sm">Logout</a>
        </div>
    </nav>

    <div class="app-layout">
        <aside class="sidebar glass-card">
            <nav class="sidebar-nav">
                <a href="/Dashboard/Index" class="nav-link @(ViewData["ActivePage"]?.ToString() == "Dashboard" ? "active" : "")">
                    <span class="nav-icon">ğŸ“Š</span> Dashboard
                </a>
                <div class="nav-section-title">User Management</div>
                <a href="/Users/Index" class="nav-link @(ViewData["ActivePage"]?.ToString() == "Users" ? "active" : "")">
                    <span class="nav-icon">ğŸ‘¥</span> Users
                </a>
                <a href="/Roles/Index" class="nav-link @(ViewData["ActivePage"]?.ToString() == "Roles" ? "active" : "")">
                    <span class="nav-icon">ğŸ›¡ï¸</span> Roles
                </a>
                <div class="nav-section-title">Monitoring</div>
                <a href="/Audit/Index" class="nav-link @(ViewData["ActivePage"]?.ToString() == "Audit" ? "active" : "")">
                    <span class="nav-icon">ğŸ“‹</span> Audit Logs
                </a>
            </nav>
        </aside>

        <main class="main-content">
            <div class="page-header">
                <h1 class="page-title">@ViewData["Title"]</h1>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">@TempData["SuccessMessage"]</div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
            }

            @RenderBody()
        </main>
    </div>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
